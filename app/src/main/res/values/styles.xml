<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HistoryTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="CardResultScan" parent="CardView">
        <item name="cardCornerRadius">20dp</item>

    </style>

    <style name="LayoutResultScan">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="TitleResultScan" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">center</item>

        <!--        <item name="android:layout_marginTop">5dp</item>-->
        <!--        <item name="layout_constraintTop_toTopOf">parent</item>-->
        <!--        <item name="layout_constraintStart_toStartOf">parent</item>-->
        <!--        <item name="layout_constraintEnd_toEndOf">parent</item>-->
    </style>

    <style name="TextResultScan" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TitleDivider">
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@color/titleDividerColor</item>
    </style>


    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

</resources>